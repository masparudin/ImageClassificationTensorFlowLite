<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helpers.ImageHelperActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewInput"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/ic_launcher_background" />
            <TextView
                android:id="@+id/textViewOutput"
                android:layout_below="@id/imageViewInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Output"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/ly_jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis : "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textViewOutput2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Output"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_kualitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kualitas : "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textViewOutput3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Output"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_penyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyakit : "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textViewOutput4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Output"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_kematangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tingkat Kematangan : "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/textViewOutput5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Output"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="16dp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/buttonPickImage"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"
                    android:text="PILIH GAMBAR" />

                <Button
                    android:id="@+id/buttonStartCamera"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"
                    android:onClick="onStartCamera"
                    android:text="BUKA KAMERA"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>